<!DOCTYPE html>
<html lang="en">

  <%- include('./partials/header.ejs')%>

  <body>
    <%- include('./partials/nav.ejs')%>
    
    <section class="index-sec">
    <div class="blogs content">
      <h2>All Blogs</h2>
      <br />
      <hr />
      <br />

      <% if(blogs.length != 0 ){%>
      <% blogs.forEach(blog=>{ %>
        <a class="single" href="/blogs/<%= blog._id %>" >
        <h1><%=blog.title %></h1>
        <p><%=blog.snippet %></p>
        </a>
      <% }) }else{%>
        <p>there are no blogs available</p>
        <% } %>

        <%- include('./partials/footer.ejs')%>

    </div>
  </section>
  </body>
</html>
